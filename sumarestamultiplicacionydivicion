#include <stdio.h>
//Encontrar suma,resta,multiplicacion y divicion con Funciones
//Declaracion de Funciones para resta
float encontrarsuma(float numero1, float numero2);
float encontrarresta(float numero1, float numero2);
float encontrarmultiplicacion(float numero1, float numero2);
float encontrardivicion(float numero1, float numero2);
int main(){
    //Codifica 
    float numero1,numero2,suma,resta,multiplicacion,divicion;
    //pide datos
    printf("Digite el primer numero");
    scanf("%f",&numero1);
    printf("Digite el segundo numero");
    scanf("%f",&numero2);
    //Formula
    suma = encontrarsuma(numero1,numero2);
    resta = encontrarresta(numero1,numero2);
    multiplicacion = encontrarmultiplicacion(numero1,numero2);
    divicion = encontrardivicion(numero1,numero2);
    //Resultado
    printf("suma = %f",suma);
    printf("resta = %f",resta);
    printf("multiplicacion = %f",multiplicacion);
    printf("divicion = %f",divicion);
    return 0;
}
//Definir Funciones
float encontrarsuma(float numero1,float numero2){
    float suma;
    return numero1+numero2;
}    
float encontrarresta(float numero1,float numero2){
    float resta;
    return numero1-numero2;
}    
float encontrarmultiplicacion(float numero1,float numero2){
    float multiplicacion;
    return numero1*numero2;
}    
float encontrardivicion(float numero1,float numero2){
    float divicion;
    return numero1/numero2;    
    
}
